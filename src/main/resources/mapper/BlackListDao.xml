<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zyg.exam.dao.BlackListDao">
  <resultMap id="BaseResultMap" type="com.zyg.exam.model.BlackList">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="type" jdbcType="VARCHAR" property="type" />
    <result column="process" jdbcType="VARCHAR" property="process" />
  </resultMap>
  <select id="selectBlackList" resultMap="BaseResultMap,count">
    <bind name="beginIndex" value="(pageIndex-1)*pageSize"></bind>
    select * from blacklist
    <if test="type != null and type != ''">
      where type = #{type,jdbcType=VARCHAR}
    </if>
    limit #{beginIndex}, #{pageSize};select found_rows() count;
  </select>
  <select id="getBlackListTypes" resultType="java.lang.String">
    select distinct type from blacklist
  </select>
  <delete id="delete">
    delete from blacklist where id in
    <foreach collection="array" item="id" open="(" separator="," close=")">
      #{id}
    </foreach>
  </delete>
  <insert id="insert" keyColumn="id" keyProperty="id" parameterType="com.zyg.exam.model.BlackList" useGeneratedKeys="true">
    insert into blacklist (name, type, process)
    values (#{name}, #{type},#{process})
  </insert>
  <update id="update" parameterType="com.zyg.exam.model.BlackList">
    update blacklist
    <set>
      <if test="name != null">
        name = #{name,jdbcType=VARCHAR},
      </if>
      <if test="type != null">
        type = #{type,jdbcType=VARCHAR},
      </if>
      <if test="process != null">
        process = #{process,jdbcType=VARCHAR},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>
</mapper>